programa media
    declare acumulador, nota : real;
    declare qtd_alunos, i : int;

    acumulador := 0.0;
    escreva("Escreva a quantidade de alunos ");
    leia(qtd_alunos);
    i := 1;

    enquanto i <= qtd_alunos
        escreva("Entre com a nota do aluno ");
        escreva(i);
        escreva(" ");
        leia(nota);
        acumulador := acumulador + nota;
        i := i + 1;
    fimenq

    acumulador := acumulador / qtd_alunos;

    escreva("A media eh: ");
    escreva(acumulador);
    escreva("\n");
fimprog
